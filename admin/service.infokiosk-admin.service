[Unit]
Description=Infokiosk Admin
After=network-online.target infokiosk-agent.service
Wants=network-online.target

[Service]
Type=simple
User=pi
EnvironmentFile=/etc/infokiosk/admin.env
WorkingDirectory=/opt/infokiosk/admin
ExecStart=/usr/bin/python3 -m uvicorn app:APP --host ${ADMIN_BIND:-0.0.0.0} --port ${ADMIN_PORT:-8000}
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target

